<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">house_form.house_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">House Form</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Majordomo\House\Block\Adminhtml\House\Edit\BackButton"/>
            <button name="reset" class="Majordomo\House\Block\Adminhtml\House\Edit\ResetButton"/>
            <button name="save" class="Majordomo\House\Block\Adminhtml\House\Edit\SaveButton"/>
        </buttons>
        <layout>
            <type>tabs</type>
        </layout>
        <deps>
            <dep>house_form.house_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="house_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
<!--            <validateUrl path="*/*/validate"></validateUrl>-->
            <submitUrl path="*/*/add"></submitUrl>
        </settings>
        <dataProvider class="Majordomo\House\Model\House\DataProvider" name="house_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>house_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="house">
        <settings>
            <label translate="true">House Modification</label>
        </settings>

        <field name="house_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">house</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>

        <field name="address" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">house</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label>Address</label>
            </settings>
        </field>

        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">house</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label>Name</label>
            </settings>
        </field>

    </fieldset>
</form>
