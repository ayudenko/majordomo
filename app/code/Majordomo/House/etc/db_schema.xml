<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="majordomo_house" resource="default" engine="innodb" comment="Majordomo House Table">
        <column xsi:type="int" name="house_id" unsigned="true" nullable="false" identity="true" comment="House ID"/>
        <column xsi:type="varchar" name="address" nullable="false" comment="House Address"/>
        <column xsi:type="varchar" name="name" nullable="true" comment="House Name"/>
        <column xsi:type="datetime" name="created_at" on_update="false" default="CURRENT_TIMESTAMP" nullable="false" comment="House record creation date"/>
        <column xsi:type="datetime" name="modified_at" on_update="true" default="CURRENT_TIMESTAMP" nullable="false" comment="House record modification date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="house_id"/>
        </constraint>
    </table>

    <table name="majordomo_house_customer" resource="default" engine="innodb">
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="int" name="house_id" unsigned="true" nullable="false" comment="House ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="customer_id"/>
            <column name="house_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_MAJORDOMO_HOUSE_MAJORDOMO_HOUSE_HOUSE_ID_HOUSE_ID" table="majordomo_house_customer"
                    column="house_id" referenceTable="majordomo_house" referenceColumn="house_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_MAJORDOMO_HOUSE_CUSTOMER_ENTITY_CUSTOMER_ID_ENTITY_ID" table="majordomo_house_customer"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>

    <table name="majordomo_room" resource="default" engine="innodb">
        <column xsi:type="int" name="room_id" unsigned="true" nullable="false" identity="true" comment="Room ID"/>
        <column xsi:type="varchar" name="name" nullable="false" comment="Room name"/>
        <column xsi:type="int" name="house_id" unsigned="true" nullable="false" comment="House ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="room_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_MAJORDOMO_ROOM_MAJORDOMO_HOUSE_HOUSE_ID_HOUSE_ID" table="majordom_room"
                    column="house_id" referenceTable="majordomo_house" referenceColumn="house_id" onDelete="CASCADE"/>
    </table>

</schema>
