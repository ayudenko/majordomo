<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="majordomo_area" resource="default" engine="innodb" comment="Majordomo Area Table">
        <column xsi:type="int" name="area_id" unsigned="true" nullable="false" identity="true" comment="Area ID"/>
        <column xsi:type="varchar" name="address" nullable="false" comment="Area Address"/>
        <column xsi:type="varchar" name="name" nullable="true" comment="Area Name"/>
        <column xsi:type="datetime" name="created_at" on_update="false" default="CURRENT_TIMESTAMP" nullable="false" comment="Area record creation date"/>
        <column xsi:type="datetime" name="modified_at" on_update="true" default="CURRENT_TIMESTAMP" nullable="false" comment="Area record modification date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="area_id"/>
        </constraint>
    </table>

    <table name="majordomo_area_customer" resource="default" engine="innodb">
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="int" name="area_id" unsigned="true" nullable="false" comment="Area ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="customer_id"/>
            <column name="area_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_MAJORDOMO_AREA_MAJORDOMO_AREA_AREA_ID_AREA_ID" table="majordomo_area_customer"
                    column="area_id" referenceTable="majordomo_area" referenceColumn="area_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_MAJORDOMO_AREA_CUSTOMER_ENTITY_CUSTOMER_ID_ENTITY_ID" table="majordomo_area_customer"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
