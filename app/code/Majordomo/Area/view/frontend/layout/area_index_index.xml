<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="area_container">
                <block class="Majordomo\Area\Block\Area" name="customer_area" cacheable="false" template="Majordomo_Area::area.phtml">
                    <arguments>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="area" xsi:type="array">
                                    <item name="component" xsi:type="string">Majordomo_Area/js/view/area</item>
                                    <item name="template" xsi:type="string">Majordomo_Area/area</item>
                                    <item name="displayArea" xsi:type="string">area</item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </container>
            <referenceBlock name="catalog.compare.sidebar" remove="true"/>
            <referenceBlock name="wishlist_sidebar" remove="true"/>
        </referenceContainer>
        <attribute name="class" value="account"/>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Framework\View\Element\Template" name="sidebar.main.areas" template="Majordomo_Area::area/collapsible.phtml" before="-">
                <arguments>
                    <argument name="block_css" xsi:type="string">block-collapsible-nav</argument>
                    <argument name="title" xsi:type="string" translate="true">My Areas</argument>
                </arguments>
                <block class="Majordomo\Area\Block\Area\Sidebar" name="customer_areas_navigation" before="-">
                    <arguments>
                        <argument name="css_class" xsi:type="string">nav items</argument>
                    </arguments>
                    <block class="Magento\Customer\Block\Account\Delimiter" name="customer-account-navigation-delimiter-1" template="Magento_Customer::account/navigation-delimiter.phtml">
                        <arguments>
                            <argument name="sortOrder" xsi:type="number">200</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
